<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:background="@drawable/bg_item_judge">

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/imgJudge"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/tvJudgeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="18sp"
        android:fontFamily="@font/rounded_bold"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/imgJudge"/>

    <TextView
        android:id="@+id/tvJudgeId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Id"
        android:textSize="14sp"
        android:fontFamily="@font/rounded_bold"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tvJudgeName"/>

</RelativeLayout>