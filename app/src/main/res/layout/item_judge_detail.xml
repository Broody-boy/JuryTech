<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@drawable/bg_item_judge">

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/imgJudge"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="30dp"/>

    <TextView
        android:id="@+id/tvJudgeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="20sp"
        android:fontFamily="@font/rounded_bold"
        android:layout_toEndOf="@id/imgJudge"/>

    <TextView
        android:id="@+id/tvJudgeId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Id"
        android:textSize="18sp"
        android:fontFamily="@font/rounded_bold"
        android:layout_below="@id/tvJudgeName"
        android:layout_toEndOf="@id/imgJudge"/>

    <ImageView
        android:id="@+id/expandDropDown"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_dropdown_arrow_24"
        android:layout_alignParentEnd="true"/>

</RelativeLayout>