<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cvContent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="0dp"
    app:strokeColor="#D5D2D2"
    app:strokeWidth=".5dp"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="5dp"
    android:focusable="true"
    android:clickable="true">


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@drawable/bg_item_judge">

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/imgJudge"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="30dp"/>

    <TextView
        android:id="@+id/tvJudgeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="20sp"
        android:fontFamily="@font/rounded_bold"
        android:layout_toEndOf="@id/imgJudge"/>

    <TextView
        android:id="@+id/tvJudgeId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Id"
        android:textSize="18sp"
        android:fontFamily="@font/rounded_bold"
        android:layout_below="@id/tvJudgeName"
        android:layout_toEndOf="@id/imgJudge"/>

    <ImageView
        android:id="@+id/expandDropDown"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_dropdown_arrow_24"
        android:layout_alignParentEnd="true"
        android:visibility="gone"/>

</RelativeLayout>

</com.google.android.material.card.MaterialCardView>